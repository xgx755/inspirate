{
  "manifest_version": 3,
  "name": "Inspirate",
  "version": "1.0.0",
  "description": "A Digital Zen Garden for your New Tab. Replaces the default page with a single, curated quote.",
  "permissions": ["storage"],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
